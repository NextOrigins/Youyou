                    <!--android:drawablePadding="10dp"-->
                    <!--android:drawableStart="@drawable/chengji"-->
                    <!--android:gravity="center"-->
                    <!--android:text="@string/chengji"-->
                    <!--android:textColor="#000"-->
                    <!--android:textSize="17sp" />-->

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginEnd="15dp"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:contentDescription="@null"-->
                    <!--android:src="@mipmap/jiantou" />-->
            <!--</RelativeLayout>-->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#efeff4" />

            <RelativeLayout
                android:id="@+id/my_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@mipmap/my_setting"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/_dian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/jiantou" />

                <View
                    android:id="@+id/_msg_hint"
                    android:layout_width="5dp"
                    android:visibility="gone"
                    android:layout_height="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp35"
                    android:layout_marginRight="@dimen/dp35"
                    android:layout_toLeftOf="@id/_dian"
                    android:layout_toStartOf="@id/_dian"
                    android:background="@drawable/round_red" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#efeff4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
