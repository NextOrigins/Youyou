<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_subject"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#f37f13"
                android:id="@+id/tv_status"
                android:text="待支付"
                android:layout_toLeftOf="@+id/iv_delete"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:id="@+id/iv_delete"
                android:layout_marginRight="15dp"
                android:src="@mipmap/delete_subject"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/_content"
                android:layout_marginRight="15dp"
                android:textColor="#f37f13"
                android:text="已支付"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:textColor="#000"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_test_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:weightSum="8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_test"
                android:layout_centerVertical="true"
                android:src="@mipmap/checkgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="考前辅导"
                android:layout_toRightOf="@+id/iv_test"
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#f2f2f2"
            android:layout_width="1dp"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:id="@+id/rl_2"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:id="@+id/iv_down"
                android:layout_centerVertical="true"
                android:src="@mipmap/down_load_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="准考证下载"
                android:layout_toRightOf="@+id/iv_down"
                android:id="@+id/tv_dowm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@+id/tv_dowm"
                android:layout_centerVertical="true"
                android:src="@mipmap/begin_down_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#f2f2f2"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_3"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cha"
                android:layout_centerVertical="true"

                android:src="@mipmap/down_load_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="成绩查询"
                android:layout_toRightOf="@+id/iv_cha"
                android:id="@+id/tv_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@+id/tv_cha"
                android:layout_centerVertical="true"
                android:src="@mipmap/begin_down_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>