<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10">

    <TextView
        android:id="@+id/_study_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp30"
        android:paddingBottom="@dimen/dp30"
        android:text="@string/study_order"
        android:textSize="@dimen/sp16" />

    <View
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#88000000"
        app:layout_constraintTop_toBottomOf="@id/_study_order" />

    <TextView
        android:id="@+id/_books_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp30"
        android:paddingBottom="@dimen/dp30"
        android:text="@string/books_order"
        android:textSize="@dimen/sp16"
        app:layout_constraintTop_toBottomOf="@id/mid" />
</android.support.constraint.ConstraintLayout>