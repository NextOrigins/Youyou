<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/parent_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cancel" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_title"
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="保存"
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="#fff"
        android:id="@+id/ll_boy"
        android:paddingLeft="10dp"
        android:paddingRight="10sp"
        android:layout_below="@+id/parent_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/iv_boy_choose"
                android:src="@mipmap/checkgender"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_girl"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:paddingRight="10sp"
        android:layout_below="@+id/ll_boy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/iv_girl_choose"
                android:src="@mipmap/checkgender"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
