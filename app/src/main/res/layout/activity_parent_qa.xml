<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/_card"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardElevation="@dimen/dp5">

        <android.support.v7.widget.Toolbar
            android:id="@+id/_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/status_bar"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/_close"
                style="@style/style_img_all_close"
                android:contentDescription="@null"
                android:src="@mipmap/cancel"
                android:tint="@color/black" />

            <TextView
                style="@style/style_text_all_title"
                android:text="@string/q_a"
                android:textColor="@color/black" />
        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dp50"
        android:background="#ECECEC"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/_swipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/line_bottom"
        app:layout_constraintTop_toBottomOf="@id/_card">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F5F7" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/_answer_count"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"
        tools:text="50个回答" />

    <CheckBox
        android:id="@+id/_star"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line_bottom"
        android:background="@android:color/transparent"
        android:button="@android:color/transparent"
        android:drawableLeft="@drawable/select_stars"
        android:drawableStart="@drawable/select_stars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/_answer_count"
        tools:text="10人收藏" />

    <Button
        android:id="@+id/_answer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line_bottom"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/holo_red_light"
        android:text="@string/answer"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/_star" />
</android.support.constraint.ConstraintLayout>