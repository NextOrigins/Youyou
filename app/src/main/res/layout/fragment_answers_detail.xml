<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/dp50"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/_bottom_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_line">

        <TextView
            android:id="@+id/_ac_reply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp5"
            android:background="@drawable/reply_bg"
            android:drawableLeft="@drawable/write"
            android:drawablePadding="@dimen/dp5"
            android:gravity="left|center_vertical"
            android:text="@string/write_reply_more"
            android:textColor="@android:color/darker_gray"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/_review"
            style="@style/style_fad_img"
            android:contentDescription="@null"
            android:src="@drawable/review" />

        <CheckBox
            android:id="@+id/_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/like_bg"
            android:padding="@dimen/dp15" />

        <ImageView
            android:id="@+id/_next_comment"
            style="@style/style_fad_img"
            android:contentDescription="@null"
            android:src="@drawable/next" />
    </LinearLayout>

    <EditText
        android:id="@+id/_comment"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp40"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/reply_bg"
        android:gravity="center_vertical"
        android:hint="@string/write_comment"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/_publish" />

    <Button
        android:id="@+id/_publish"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/publish_btn_bg"
        android:text="@string/publish"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/_comment" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/_swipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>